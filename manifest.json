{
    "manifest_version": 3,
    "name": "Hau Pandora Box",
    "version": "1.1",
    "description": "The ultimate productivity suite: Smart Jira navigation, built-in developer tools (JSON, Hex, etc.), custom shortcuts, and classic Backspace navigation.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Hau Pandora Box"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "omnibox": {
        "keyword": "hn"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "backspace.js"
            ]
        }
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}